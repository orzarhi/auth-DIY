generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  Session  Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  expiresAt DateTime

  User User @relation(fields: [userId], references: [id])

  @@index([userId], name: "userId")
}
